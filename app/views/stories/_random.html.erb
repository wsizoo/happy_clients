<article>
  <header>
    <h3><%= link_to @story.company_name, @story %></h3>
  </header>
  <table>
    <tr>
      <th>Quote:</th>
      <td> <%= truncate(@story.quote, length: 40, separator: ' ') %></td>
    </tr>
    <tr>
      <th>Description:</th>
      <td> <%= truncate(@story.description, length: 40, separator: ' ') %> <%= link_to 'Show More',@story %></td>
    </tr>
    <tr>
      <th>Rep Name:</th>
      <td>
        <%= @story.rep_name %>
      </td>
    </tr>
    <tr>
      <th>VAS Object:</th>
      <td><%= @story.vas_object %></td>
    </tr>
    <tr>
      <th>Case Link:</th>
      <td><%= format_case_link(@story)%></td>
    </tr>

    <tr>
      <th>Website:</th>
      <td><%= format_website_link(@story) %></td>
    </tr>
  </table>
</article>